                            <option value="cq">CQ</option>
                            <option value="mcq">MCQ</option>
                            <option value="practical">Practical</option>
                        </select>
                    </div>

                </div>

            </div>

            @* ----- End QnA Header Section ----- *@

        </div>

    </div>
</div>
